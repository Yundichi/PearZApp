body {
  font-family: Arial, sans-serif;
  background-color: #f4f7fa;
  margin: 0;
  padding: 0;
  color: #333;
}

header {
  background-color: #4a90e2;
  color: white;
  padding: 1rem;
  text-align: center;
}

nav a {
  margin: 0 10px;
  color: white;
  text-decoration: none;
}

main {
  padding: 1.5rem;
}

section {
  margin-bottom: 2rem;
}

textarea {
  width: 100%;
}

canvas {
  max-width: 100%;
  margin-top: 1rem;
}
